<div class="row well">
  {{#if askingQuestion}}
    <div class="ask-question-form-container">
      <form>
        <div class="row">
            <div class="col-sm-3 form-group">
              <label for="author">Your Name</label>
              {{input value=author id="author" class="form-control"}}
            </div>

            <div class="col-sm-9 form-group">
              <label for="question">Your Question</label>
              {{input value=question id="question" class="form-control"}}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 form-group">
              <label for="description">Details</label>
              {{input value=description id="description" class="form-control"}}
            </div>

            <div class="col-sm-2 form-group">
              <label for="ask"></label><br>
              <button id="ask" class="btn btn-warning" {{action 'askQuestion'}}>Ask!</button>
            </div>
        </div>

      </form>
    </div>
  {{else}}
    <button class="btn btn-primary" {{action 'showQuestionForm'}}>Ask A Question</button>
  {{/if}}
</div>

<div class="row well">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Author</th><th>Question</th><th>Posted</th><th></th>
        </tr>
      </thead>
      {{#each question in model}}
        <tbody>
          <tr>
            <td>
              {{question.author}}
            </td>
            <td>
              {{#link-to 'question' question}}{{question.question}}{{/link-to}}
            </td>
            <td>
              {{question.date}}
            </td>
            <td>
              {{#link-to 'edit-question' question}}<span class="btn btn-danger">Edit</span>{{/link-to}}
            </td>
          </tr>
        </tbody>
      {{/each}}
    </table>
  </div>
</div>
