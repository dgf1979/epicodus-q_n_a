<div class="row well">
  <h1>{{question}}</h1>
  <h5>Posted on: {{date}} by: {{author}}</h5>
  <h3>Details:</h3>
  <div id="question-details-view">
    {{description}}
  </div>
</div>

<h1>Answers:</h1>
<div class="row well">
  {{#if answeringQuestion}}
    <div class="answer-question-form-container">
      <form>
        <div class="row">
            <div class="col-sm-2 form-group">
              <label for="author">Your Name</label>
              {{input value=answerAuthor id="author" class="form-control"}}
            </div>

            <div class="col-sm-8 form-group">
              <label for="answer">Your Answer</label>
              {{input value=answer id="answer" class="form-control"}}
            </div>

            <div class="col-sm-2 form-group">
              <label for="answer"></label><br>
              <button id="answer" class="btn btn-warning" {{action 'answerQuestion'}}>Answer!</button>
            </div>
        </div>
      </form>
    </div>
  {{else}}
    <button class="btn btn-primary" {{action 'showAnswerForm'}}>Answer This Question</button>
  {{/if}}



</div>
